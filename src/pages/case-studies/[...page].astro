---
import type { GetStaticPaths, Page } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { siteConfig } from "../../config/site";

export const getStaticPaths = (async ({ paginate }) => {
  const allCaseStudies = (await getCollection("caseStudies")).sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
  );
  return paginate(allCaseStudies, { pageSize: 9 });
}) satisfies GetStaticPaths;

type Props = {
  page: Page<CollectionEntry<"caseStudies">>;
};

const { page } = Astro.props;

const metadata = {
  title: "Case Studies",
  description: "Explore my portfolio of projects and the impact they've made for clients.",
};
---

<BaseLayout {metadata}>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl mb-4">
        Case Studies
      </h1>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto">
        Real projects, real results. Explore how I've helped clients achieve their goals.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {page.data.map((study) => (
        <article class="group relative flex flex-col overflow-hidden rounded-lg border border-gray-800 bg-gray-900/50 transition-all hover:border-gray-700 hover:shadow-lg">
          {study.data.image && (
            <div class="aspect-video overflow-hidden">
              <img
                src={study.data.image}
                alt={study.data.title}
                class="h-full w-full object-cover transition-transform group-hover:scale-105"
              />
            </div>
          )}
          <div class="flex flex-1 flex-col p-6">
            <div class="flex-1">
              {study.data.category && (
                <span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-blue-500/10 text-blue-400 mb-3">
                  {study.data.category}
                </span>
              )}
              <h2 class="text-xl font-semibold mb-2 group-hover:text-blue-400 transition-colors">
                <a href={`/case-studies/${study.id}`} class="hover:underline">
                  {study.data.title}
                </a>
              </h2>
              <p class="text-gray-400 text-sm mb-4">
                {study.data.description}
              </p>
              <div class="flex items-center text-sm text-gray-500">
                <span>{study.data.client}</span>
                <span class="mx-2">•</span>
                <time datetime={study.data.date.toISOString()}>
                  {study.data.date.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "short",
                  })}
                </time>
              </div>
            </div>
            {study.data.tags && (
              <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-gray-800">
                {study.data.tags.slice(0, 3).map((tag) => (
                  <span class="text-xs text-gray-500">#{tag}</span>
                ))}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>

    {(page.url.prev || page.url.next) && (
      <nav class="flex justify-center gap-4 mt-12">
        {page.url.prev && (
          <a
            href={page.url.prev}
            class="px-6 py-2 rounded-lg border border-gray-800 hover:border-gray-700 transition-colors"
          >
            ← Previous
          </a>
        )}
        {page.url.next && (
          <a
            href={page.url.next}
            class="px-6 py-2 rounded-lg border border-gray-800 hover:border-gray-700 transition-colors"
          >
            Next →
          </a>
        )}
      </nav>
    )}
  </div>
</BaseLayout>
