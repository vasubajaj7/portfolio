---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getImage } from "astro:assets";
import Content2 from "../components/widgets/Content2.astro";
import Values from "../components/widgets/Values.astro";
import aboutImage from "../assets/images/about-office.webp";

const metadata = {
    title: "About â€” Principal Data Architect",
    description: "Learn about my architectural philosophy, enterprise data platform design approach, and 12+ years of multi-cloud architecture expertise.",
};

const values = [
    {
        title: "Architecture-First Approach",
        description: "Designing scalable, governed data platforms with clear architectural decisions, tradeoff analysis, and long-term maintainability.",
    },
    {
        title: "Multi-Cloud Expertise",
        description: "Architecting unified data platforms across GCP BigQuery, AWS Redshift, Azure Databricks with consistent governance and cost optimization.",
    },
    {
        title: "Data Modeling & Governance",
        description: "Implementing Data Vault 2.0, Medallion architecture, and dimensional modeling with Unity Catalog, Purview, and IAM-based access control.",
    },
    {
        title: "Cost & Performance Optimization",
        description: "Delivering 40% cost reductions through partitioning strategies, clustering, and autoscaling. Achieving 10x performance via architectural optimization.",
    },
    {
        title: "Enterprise-Grade Security",
        description: "Implementing column-level security, PII masking, RBAC, data lineage, and compliance frameworks for regulated industries.",
    },
    {
        title: "Measurable Business Impact",
        description: "Quantifying architectural decisions with scale metrics: TB/day processing, query latency reduction, cost savings, and uptime SLAs.",
    },
];

const optimizedImage = await getImage({
    src: aboutImage,
    format: "webp",
});
---

<BaseLayout {metadata}>
    <link slot="head" rel="preload" href={optimizedImage.src} as="image" />
    <Content2
        title="About Me"
        description={[
            "I'm a Principal Data Architect with 12+ years architecting scalable, governed, multi-cloud data platforms across GCP, AWS, Azure, Databricks, Snowflake, and Microsoft Fabric. I specialize in designing TB-scale data lake architectures, implementing Medallion and Data Vault modeling patterns, and building enterprise governance frameworks with Unity Catalog and Purview.",
            "My architectural approach emphasizes measurable business impact: 3TB/day data processing platforms, 40% cost reductions through strategic partitioning and clustering, 10x performance improvements via query optimization and autoscaling, and enterprise-grade governance with column-level security and data lineage. I lead architectural decisions for cross-functional teams, evaluating tradeoffs between Snowflake vs BigQuery, Data Vault vs Dimensional modeling, and multi-cloud vs single-cloud strategies.",
        ]}
        image={aboutImage}
        imageAlt="Technical Architect workspace"
        actions={[
            {
                text: "Contact for Architecture Consultation",
                href: "/#contact",
                variant: "primary",
                icon: "lucide:mail",
            },
            {
                text: "View Architecture Case Studies",
                href: "/#case-studies",
                variant: "secondary",
                icon: "lucide:briefcase",
            },
        ]}
    />
    <Values
        items={values}
        columns={3}
        tagline="Architectural Philosophy"
        title="How I Design Data Platforms"
        subtitle="Principles guiding enterprise-scale architecture decisions and platform design"
    />
    
    <!-- Contact Section -->
    <section class="py-16">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <p class="text-sm font-semibold tracking-wide text-primary uppercase mb-2">Get in Touch</p>
                <h2 class="text-3xl font-bold tracking-tight sm:text-4xl mb-4">Let's Connect</h2>
                <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                    Reach out for cloud architecture consulting, speaking engagements, or collaboration opportunities.
                </p>
            </div>
            
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                <div class="flex flex-col items-center text-center p-6 rounded-lg border border-border bg-card">
                    <div class="rounded-full bg-blue-500/10 p-3 mb-4">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="font-semibold mb-2">Email</h3>
                    <p class="text-sm text-muted-foreground">vasu.c.bajaj@outlook.com</p>
                </div>
                
                <div class="flex flex-col items-center text-center p-6 rounded-lg border border-border bg-card">
                    <div class="rounded-full bg-gray-500/10 p-3 mb-4">
                        <svg class="w-6 h-6 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
