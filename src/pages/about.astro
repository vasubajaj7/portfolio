        ]}
        tagline="About"
        image={aboutImage}
        imageAlt="Modern web development office"
        actions={[
            {
                text: "Contact Us",
                href: "/contact",
                variant: "primary",
                icon: "lucide:mail",
            },
            {
                text: "View Details",
                href: "#",
                variant: "secondary",
                icon: "lucide:arrow-right",
            },
        ]}
    />
    <Values
        items={values}
        columns={3}
        tagline="Our Values"
        title="What Defines Us"
        subtitle="Principles that guide our daily work"
    />
</BaseLayout>
