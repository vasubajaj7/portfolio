---
import BaseLayout from "../layouts/BaseLayout.astro";
import Features from "../components/widgets/Features.astro";
import Content from "../components/widgets/Content.astro";
import Form from "../components/ui/Form.astro";

const metadata = {
    title: "Contact",
    description: "Let's work together! Get in touch to discuss your project or just say hello.",
};

const visionText = ["Let's work together! Whether you have a project in mind or just want to connect, I'd love to hear from you."];
---

<BaseLayout {metadata}>
    <Content tagline="Contact" title="Contact" description={visionText} />
    <div
        class="mx-auto max-w-xl bg-card border border-border rounded-3xl p-8 shadow-sm mb-12 md:mb-16"
    >
        <Form />
    </div>
    <Features
        tagline="Get in Touch"
        title="Let's Connect"
        subtitle="Choose your preferred way to reach out. I typically respond within 24 hours."
        classes={{ container: "pt-0 md:pt-0" }}
        features={[
            {
                title: "Email",
                description: "your.email@example.com",
                icon: "lucide:mail",
                iconClass: "bg-blue-500/10 text-blue-400",
            },
            {
                title: "GitHub",
                description: "@yourusername",
                icon: "lucide:github",
                iconClass: "bg-purple-500/10 text-purple-400",
            },
            {
                title: "LinkedIn",
                description: "Connect with me",
                icon: "lucide:linkedin",
                iconClass: "bg-blue-500/10 text-blue-400",
            },
            {
                title: "Project Collaboration",
                description:
                    "Open to freelance work and exciting project opportunities.",
                icon: "lucide:briefcase",
                iconClass: "bg-green-500/10 text-green-400",
            },
            {
                title: "Consulting",
                description:
                    "Available for technical consulting and code reviews.",
                icon: "lucide:user-check",
                iconClass: "bg-yellow-500/10 text-yellow-400",
            },
            {
                title: "Speaking & Writing",
                description:
                    "Interested in tech talks, workshops, and guest blog posts.",
                icon: "lucide:mic",
                iconClass: "bg-pink-500/10 text-pink-400",
            },
        ]}
    />
</BaseLayout>
