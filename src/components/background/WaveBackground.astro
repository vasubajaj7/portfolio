---
// Animated Wave Background Component - Bottom Accent
---

<div id="wave-background" class="fixed bottom-0 left-0 right-0 -z-10 h-96 overflow-hidden pointer-events-none">
  <svg
    class="absolute bottom-0 w-full"
    preserveAspectRatio="none"
    viewBox="0 0 1200 100"
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Wave 1 - Primary color, slower animation -->
    <path
      d="M0,50 Q300,30 600,50 T1200,50 L1200,100 L0,100 Z"
      class="wave wave-1"
      fill="url(#waveGradient1)"
    />

    <!-- Wave 2 - Accent color, medium speed -->
    <path
      d="M0,60 Q300,40 600,60 T1200,60 L1200,100 L0,100 Z"
      class="wave wave-2"
      fill="url(#waveGradient2)"
    />

    <!-- Wave 3 - Light accent, faster animation -->
    <path
      d="M0,70 Q300,55 600,70 T1200,70 L1200,100 L0,100 Z"
      class="wave wave-3"
      fill="url(#waveGradient3)"
    />

    <!-- Gradients -->
    <defs>
      <linearGradient id="waveGradient1" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#0066ff;stop-opacity:0.15" />
        <stop offset="100%" style="stop-color:#0066ff;stop-opacity:0" />
      </linearGradient>

      <linearGradient id="waveGradient2" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#0099ff;stop-opacity:0.1" />
        <stop offset="100%" style="stop-color:#0099ff;stop-opacity:0" />
      </linearGradient>

      <linearGradient id="waveGradient3" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#00ccff;stop-opacity:0.08" />
        <stop offset="100%" style="stop-color:#00ccff;stop-opacity:0" />
      </linearGradient>
    </defs>
  </svg>
</div>

<style>
  #wave-background {
    pointer-events: none;
    background: linear-gradient(180deg, transparent 0%, transparent 50%, rgba(250, 250, 250, 0.05) 100%);
  }

  @media (prefers-color-scheme: dark) {
    #wave-background {
      background: linear-gradient(180deg, transparent 0%, transparent 50%, rgba(10, 10, 10, 0.1) 100%);
    }
  }

  .wave {
    animation: wave 15s ease-in-out infinite;
    transform-origin: center;
  }

  .wave-1 {
    animation-duration: 15s;
    animation-delay: 0s;
  }

  .wave-2 {
    animation-duration: 10s;
    animation-delay: -2s;
  }

  .wave-3 {
    animation-duration: 8s;
    animation-delay: -4s;
  }

  @keyframes wave {
    0%, 100% {
      d: path('M0,50 Q300,30 600,50 T1200,50 L1200,100 L0,100 Z');
    }
    25% {
      d: path('M0,50 Q300,40 600,50 T1200,50 L1200,100 L0,100 Z');
    }
    50% {
      d: path('M0,50 Q300,60 600,50 T1200,50 L1200,100 L0,100 Z');
    }
    75% {
      d: path('M0,50 Q300,35 600,50 T1200,50 L1200,100 L0,100 Z');
    }
  }

  @keyframes wave2 {
    0%, 100% {
      d: path('M0,60 Q300,40 600,60 T1200,60 L1200,100 L0,100 Z');
    }
    25% {
      d: path('M0,60 Q300,50 600,60 T1200,60 L1200,100 L0,100 Z');
    }
    50% {
      d: path('M0,60 Q300,70 600,60 T1200,60 L1200,100 L0,100 Z');
    }
    75% {
      d: path('M0,60 Q300,45 600,60 T1200,60 L1200,100 L0,100 Z');
    }
  }

  .wave-2 {
    animation-name: wave2;
  }

  @keyframes wave3 {
    0%, 100% {
      d: path('M0,70 Q300,55 600,70 T1200,70 L1200,100 L0,100 Z');
    }
    25% {
      d: path('M0,70 Q300,65 600,70 T1200,70 L1200,100 L0,100 Z');
    }
    50% {
      d: path('M0,70 Q300,80 600,70 T1200,70 L1200,100 L0,100 Z');
    }
    75% {
      d: path('M0,70 Q300,60 600,70 T1200,70 L1200,100 L0,100 Z');
    }
  }

  .wave-3 {
    animation-name: wave3;
  }
</style>
