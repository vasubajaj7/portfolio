---
// Animated Wave Background Component
---

<div id="wave-background" class="fixed inset-0 -z-10 w-full h-full overflow-hidden">
  <svg
    class="absolute w-full h-full"
    preserveAspectRatio="none"
    viewBox="0 0 1200 120"
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Wave 1 - Primary color, slower animation -->
    <path
      d="M0,50 Q300,20 600,50 T1200,50 L1200,120 L0,120 Z"
      class="wave wave-1"
      fill="url(#waveGradient1)"
      opacity="0.7"
    />

    <!-- Wave 2 - Accent color, medium speed -->
    <path
      d="M0,60 Q300,35 600,60 T1200,60 L1200,120 L0,120 Z"
      class="wave wave-2"
      fill="url(#waveGradient2)"
      opacity="0.5"
    />

    <!-- Wave 3 - Light accent, faster animation -->
    <path
      d="M0,70 Q300,50 600,70 T1200,70 L1200,120 L0,120 Z"
      class="wave wave-3"
      fill="url(#waveGradient3)"
      opacity="0.3"
    />

    <!-- Gradients -->
    <defs>
      <linearGradient id="waveGradient1" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#0066ff;stop-opacity:0.4" />
        <stop offset="100%" style="stop-color:#0066ff;stop-opacity:0" />
      </linearGradient>

      <linearGradient id="waveGradient2" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#0099ff;stop-opacity:0.3" />
        <stop offset="100%" style="stop-color:#0099ff;stop-opacity:0" />
      </linearGradient>

      <linearGradient id="waveGradient3" x1="0%" y1="0%" x2="0%" y2="100%">
        <stop offset="0%" style="stop-color:#00ccff;stop-opacity:0.2" />
        <stop offset="100%" style="stop-color:#00ccff;stop-opacity:0" />
      </linearGradient>
    </defs>
  </svg>
</div>

<style>
  #wave-background {
    pointer-events: none;
    background: linear-gradient(135deg, rgba(250, 250, 250, 0.5) 0%, rgba(250, 250, 250, 0) 100%);
  }

  @media (prefers-color-scheme: dark) {
    #wave-background {
      background: linear-gradient(135deg, rgba(10, 10, 10, 0.5) 0%, rgba(10, 10, 10, 0) 100%);
    }

    svg {
      filter: brightness(0.6) contrast(1.2);
    }
  }

  .wave {
    animation: wave 15s ease-in-out infinite;
    transform-origin: center;
  }

  .wave-1 {
    animation-duration: 15s;
    animation-delay: 0s;
  }

  .wave-2 {
    animation-duration: 10s;
    animation-delay: -2s;
  }

  .wave-3 {
    animation-duration: 8s;
    animation-delay: -4s;
  }

  @keyframes wave {
    0%, 100% {
      d: path('M0,50 Q300,20 600,50 T1200,50 L1200,120 L0,120 Z');
    }
    25% {
      d: path('M0,50 Q300,35 600,50 T1200,50 L1200,120 L0,120 Z');
    }
    50% {
      d: path('M0,50 Q300,80 600,50 T1200,50 L1200,120 L0,120 Z');
    }
    75% {
      d: path('M0,50 Q300,30 600,50 T1200,50 L1200,120 L0,120 Z');
    }
  }

  /* Wave 2 animation */
  .wave-2 {
    d: path('M0,60 Q300,35 600,60 T1200,60 L1200,120 L0,120 Z');
  }

  @keyframes wave2 {
    0%, 100% {
      d: path('M0,60 Q300,35 600,60 T1200,60 L1200,120 L0,120 Z');
    }
    25% {
      d: path('M0,60 Q300,50 600,60 T1200,60 L1200,120 L0,120 Z');
    }
    50% {
      d: path('M0,60 Q300,85 600,60 T1200,60 L1200,120 L0,120 Z');
    }
    75% {
      d: path('M0,60 Q300,45 600,60 T1200,60 L1200,120 L0,120 Z');
    }
  }

  .wave-2 {
    animation-name: wave2;
  }

  /* Wave 3 animation */
  .wave-3 {
    d: path('M0,70 Q300,50 600,70 T1200,70 L1200,120 L0,120 Z');
  }

  @keyframes wave3 {
    0%, 100% {
      d: path('M0,70 Q300,50 600,70 T1200,70 L1200,120 L0,120 Z');
    }
    25% {
      d: path('M0,70 Q300,65 600,70 T1200,70 L1200,120 L0,120 Z');
    }
    50% {
      d: path('M0,70 Q300,90 600,70 T1200,70 L1200,120 L0,120 Z');
    }
    75% {
      d: path('M0,70 Q300,55 600,70 T1200,70 L1200,120 L0,120 Z');
    }
  }

  .wave-3 {
    animation-name: wave3;
  }
</style>
